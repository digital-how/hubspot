{
  "name": "Company Line Items App",
  "description": "A HubSpot app that displays line items from company deals in a custom sidebar card",
  "version": "1.0.0",
  "author": "Your Company",
  "website": "https://yourcompany.com",
  "support": "support@yourcompany.com",
  "privacyPolicy": "https://yourcompany.com/privacy",
  "termsOfService": "https://yourcompany.com/terms",
  "oauth": {
    "clientId": "{{HUBSPOT_CLIENT_ID}}",
    "clientSecret": "{{HUBSPOT_CLIENT_SECRET}}",
    "redirectUri": "{{HUBSPOT_REDIRECT_URI}}",
    "scopes": [
      "crm.objects.companies.read",
      "crm.objects.deals.read",
      "crm.objects.line_items.read"
    ]
  },
  "permissions": {
    "scopes": [
      "crm.objects.companies.read",
      "crm.objects.deals.read",
      "crm.objects.line_items.read"
    ]
  },
  "uiExtensions": [
    {
      "type": "crm.record.sidebar",
      "objectType": "COMPANIES",
      "file": "./hubspot/dist/bundle.js",
      "meta": {
        "label": "Line Items",
        "icon": "line-chart"
      }
    }
  ],
  "webhooks": [],
  "functions": [],
  "actions": [],
  "triggers": [],
  "permittedUrls": [
    "https://yourdomain.com",
    "http://localhost:5000"
  ]
}
